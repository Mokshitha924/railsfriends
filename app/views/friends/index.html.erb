
<% if user_signed_in? %>
<% content_for :title, "Friends" %>

<h1>Friend List</h1>

<div id="friends">
  <% @friends.each do |friend| %>
  <% if friend.user == current_user %> <!--to show only the current user friends!-->
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend %>
    </p>
  <% end %>
  <% end %>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
<h1>Hello World!!</h1>
This is my first rails webpages!....


<% end %>
